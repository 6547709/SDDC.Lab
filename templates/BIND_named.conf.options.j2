//
// File: /etc/bind/named.conf.options
//

options {
  directory "/var/cache/bind";
  recursion yes;
  notify yes;
  allow-query { any; };
  allow-query-cache { any; };
  allow-recursion { any; };
  {% if Deploy.Settings.IPv4 == true and Deploy.Settings.IPv6 != true %}
  forwarders { {{ Nested_DNS.OS.Packages.BIND.Forwarder.IPv4 }}; }; 
  {% endif %}
  {% if Deploy.Settings.IPv4 == true and Deploy.Settings.IPv6 == true %}
  forwarders { {{ Nested_DNS.OS.Packages.BIND.Forwarder.IPv4 }}; {{ Nested_DNS.OS.Packages.BIND.Forwarder.IPv6 }}; };
  {% endif %}
  {% if Deploy.Settings.IPv4 != true and Deploy.Settings.IPv6 == true %}
  forwarders { {{ Nested_DNS.OS.Packages.BIND.Forwarder.IPv6 }}; };
  {% endif %}
  dnssec-validation no;
  auth-nxdomain no; # conform to RFC1035
  listen-on { localhost; any; };
  listen-on-v6 { localhost; any; };
  allow-transfer { any; };
};