$TTL 604800
{{ Common.DNS.Domain | lower }}.  IN SOA dns.{{ Common.DNS.Domain | lower }}. admin.{{ Common.DNS.Domain | lower }}. (
          10   ; Serial
      604800   ; Refresh
       86400   ; Retry
     2419200   ; Expire
      604800 ) ; Negative Cache TTL

; Name servers
                NS   dns.{{ Common.DNS.Domain | lower }}.

; Define Origin
$ORIGIN  {{ Common.DNS.Domain | lower }}.

; A records for name servers
{% if Deploy.Settings.IPv4 %}
{{ Nested_DNS.FQDN | lower }}.           IN   A    {{ Nested_DNS.OS.Network.IPv4.Address }}
{% endif %}{# Deploy.Settings.IPv4 #}
{% if Deploy.Settings.IPv6 %}
{{ Nested_DNS.FQDN | lower }}.           IN   AAAA    {{ Nested_DNS.OS.Network.IPv6.Address }}
{% endif %}{# Deploy.Settings.IPv6 #}
